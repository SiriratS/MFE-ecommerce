{
  "name": "cart-mfe",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "cart-mfe/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-architects/native-federation:build",
      "options": {},
      "configurations": {
        "production": {
          "target": "cart-mfe:esbuild:production"
        },
        "development": {
          "target": "cart-mfe:esbuild:development",
          "dev": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-architects/native-federation:build",
      "options": {
        "target": "cart-mfe:serve-original:development",
        "rebuildDelay": 500,
        "dev": true,
        "cacheExternalArtifacts": false,
        "port": 0
      }
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "cart-mfe:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "cart-mfe/jest.config.ts",
        "tsConfig": "cart-mfe/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "cart-mfe:build",
        "staticFilePath": "dist/cart-mfe/browser",
        "spa": true
      }
    },
    "esbuild": {
      "executor": "@angular/build:application",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/cart-mfe",
        "browser": "cart-mfe/src/main.ts",
        "polyfills": [
          "zone.js",
          "es-module-shims"
        ],
        "tsConfig": "cart-mfe/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "cart-mfe/public"
          }
        ],
        "styles": [
          "cart-mfe/src/styles.scss"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve-original": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "cart-mfe:esbuild:production"
        },
        "development": {
          "buildTarget": "cart-mfe:esbuild:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 4201
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t ecommerce-cart-mfe:latest -f cart-mfe/Dockerfile .",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {
        "production": {
          "command": "docker build -t ecommerce-cart-mfe:latest -t ecommerce-cart-mfe:{args.tag} -f cart-mfe/Dockerfile ."
        }
      }
    },
    "docker-run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run -d -p 8081:80 --name ecommerce-cart-mfe ecommerce-cart-mfe:latest"
      }
    },
    "docker-stop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker stop ecommerce-cart-mfe && docker rm ecommerce-cart-mfe"
      }
    }
  }
}